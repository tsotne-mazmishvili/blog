<% if obj.errors.any? %>
<div class="card border-danger text-danger mb-3" style="max-width: 35rem;">
  <div class="card-header">
    <h4>
      <%= pluralize(obj.errors.count, "error") %>
      prohbited this article from being saved
    </h4>
  </div>
  <div class="card-body text-danger">
    <ul>
      <% obj.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>

<% end %>
