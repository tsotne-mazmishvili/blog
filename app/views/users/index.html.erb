<h1 align="center">All Bloggers</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="card border-default" style="width: 20rem;">
        <div class="card bg-light">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li><h3><%= link_to user.username, user_path(user) %></h3></li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Delete user", user_path(user), method: :delete,
                data: { confirm: "Are you sure?"}%></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
