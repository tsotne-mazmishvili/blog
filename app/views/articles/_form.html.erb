<%= render 'shared/errors', obj: @article %>

<%= form_for @article do |f| %>
<div>
  <div class="form-group row">
    <%= f.label :title, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "description", autofocus: true %>
    </div>
  </div>
  <div class="form-group row col-sm-10">
    <%= f.submit class: "btn btn-primary btn-lg"%>
  </div>
</div>
<% end %>

<div align="center">
  [ <%= link_to "cancel request and return to article listing", articles_path %> ]
</div>
